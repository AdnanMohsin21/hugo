# Google Cloud Platform (optional - only needed if USE_VERTEX_AI=true)
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1

# LLM Provider Configuration
# Set to "true" to use Vertex AI (requires GCP credentials and billing)
# Set to "false" to use local Ollama (no cloud dependencies)
USE_VERTEX_AI=false

# Ollama Configuration (used when USE_VERTEX_AI=false)
OLLAMA_MODEL=gemma:2b
OLLAMA_BASE_URL=http://localhost:11434

# Vertex AI Models (used when USE_VERTEX_AI=true)
GEMINI_MODEL=gemini-1.5-pro
EMBEDDING_MODEL=text-embedding-004

# Gmail API (optional - uses mock data without these)
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.json
SUPPLIER_LABEL=Suppliers
MAX_EMAILS_PER_FETCH=50

# Vector Store
VECTOR_DB_PATH=./data/chroma_db
VECTOR_COLLECTION_NAME=supplier_history

# ERP Data
ERP_DATA_PATH=./data/erp_mock.json

# Risk Thresholds
HIGH_RISK_THRESHOLD=0.7
MEDIUM_RISK_THRESHOLD=0.4

# Processing
BATCH_SIZE=10
MAX_RETRIES=3
